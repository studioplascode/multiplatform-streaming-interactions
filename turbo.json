{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "EXPRESS_PORT",
    "SOCKET_SERVER_PORT",
    "NODE_ENV"
  ],
  "remoteCache": {
    "signature": true
  }
}
